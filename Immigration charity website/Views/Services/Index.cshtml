@{
    ViewBag.Title = "Our Services";
}

<div class="container mt-4">
    <h1 class="text-center mb-5">@ViewBag.Title</h1>

    <div class="row">
        <!-- Medical Services Section -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#medicalServices" aria-expanded="false" aria-controls="medicalServices">
                            Medical Services
                        </button>
                    </h2>
                </div>
                <div id="medicalServices" class="collapse">
                    <div class="card-body">
                        <p>We offer a variety of medical services, including routine check-ups, emergency care, and specialized treatment.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Psychological Support Section -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#psychologicalSupport" aria-expanded="false" aria-controls="psychologicalSupport">
                            Psychological Support
                        </button>
                    </h2>
                </div>
                <div id="psychologicalSupport" class="collapse">
                    <div class="card-body">
                        <p>Our psychological support services include counseling, support groups, and emotional support.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Legal Aid Section -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#legalAid" aria-expanded="false" aria-controls="legalAid">
                            Legal Aid
                        </button>
                    </h2>
                </div>
                <div id="legalAid" class="collapse">
                    <div class="card-body">
                        <p>We provide legal advice, representation, and assistance services.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

